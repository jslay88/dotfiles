# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

echo "ğŸ§ Setting up Linux environment..."

# Check if we're on Arch
if command -v pacman &> /dev/null; then
    echo "ğŸ“¦ Installing packages via pacman..."
    
    # Core packages
    PACKAGES=(
        neovim
        git
        git-lfs
        age
        gnupg
        ripgrep
        fd
        fzf
        jq
        yq
        htop
        btop
        curl
        wget
        unzip
        perl  # For zsh theme duration tracking
    )
    
    # Check which packages need installing
    TO_INSTALL=()
    for pkg in "${PACKAGES[@]}"; do
        if ! pacman -Qi "$pkg" &> /dev/null; then
            TO_INSTALL+=("$pkg")
        fi
    done
    
    if [ ${#TO_INSTALL[@]} -gt 0 ]; then
        echo "Installing: ${TO_INSTALL[*]}"
        sudo pacman -S --noconfirm "${TO_INSTALL[@]}" || echo "âš ï¸  Some packages failed to install (may need manual intervention)"
    else
        echo "âœ… All core packages already installed"
    fi
fi

